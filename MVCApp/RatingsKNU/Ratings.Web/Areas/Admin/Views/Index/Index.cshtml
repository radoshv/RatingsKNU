@model IEnumerable<Ratings.Web.Areas.Admin.Models.IndexModel>

@{
    ViewBag.Title = "Показники групи";
}

<h2>Показники групи @ViewBag.GroupTitle</h2>

<p>
    @Html.ActionLink("Додати показник", "Create", new {groupId = ViewBag.GroupId})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ParentId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UOM)
        </th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ParentId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UOM)
        </td>
        <td>
            @Html.ActionLink("Редагувати", "Edit", new {id = item.Id}) |
            @Html.ActionLink("Деталі", "Details", new {id = item.Id}) |
            @Html.ActionLink("Видалити", "Delete", new {id = item.Id})
        </td>
        <td></td>
    </tr>
}

</table>
