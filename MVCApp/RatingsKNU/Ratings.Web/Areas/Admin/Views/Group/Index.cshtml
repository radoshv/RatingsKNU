@model IEnumerable<Ratings.Web.Areas.Admin.Models.GroupModel>

@{
    ViewBag.Title = "Список груп";
}

<h2>Список груп</h2>

<p>
    @Html.ActionLink("Додати нову", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Редагувати", "Edit", new {id = item.Id}) |
